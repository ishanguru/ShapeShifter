
/*
    Test the valid and invalid generic / specific Shape combinations
    using the Copy function. 
*/

void scene() {

	Sphere sph;
	Shape sh;
	Shape copy1;
	Shape copy2;
	Sphere copy3;
	Sphere copy4;

    sph = SPHERE; 
    sh = SPHERE; 
    copy1 = Copy(sph); // okay Shape <- Sphere 
    copy2 = Copy(sh); // okay Shape <- Shape
    copy3 = Copy(sph); // okay Sphere <- Sphere 
    copy4 = Copy(sh); // NOT OKAY


}
