
// Make a 5 layer pyramid using a for loop

Scene {

    Shape base = CUBE; 
    int i; 
    // Scale: 1, .9, .8, .7, .6
    Shape prev = Copy(base);  
    for (i = 1; i < 5; ++i ) {
        Shape next = Copy(prev); 
        Scale(next, (1 - i * 0.1), 
                    (1 - i * 0.1),
                    (1 - i * 0.1); 
        Translate(next, 0.0, (i*0.1), 0.0); 
        base = Union(base, next); 
        prev = next;  
    }
    render(base); 

}
